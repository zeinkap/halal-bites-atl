# This is an example environment file
# Copy this to .env for development and .env.production for production

# Database Configuration
# ---------------------
# Development Database URL (local development)
DATABASE_URL="postgresql://user:pass@dev-database-url/dbname"

# Production Database URL (deployed application)
# DATABASE_URL="postgresql://user:pass@prod-database-url/dbname"

# Application URLs
# --------------
# Development URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# Production URL
# NEXT_PUBLIC_APP_URL="https://your-production-url.com"

# Cloudinary Configuration
# ----------------------
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# Image Upload Settings
# -------------------
# Maximum file size for image uploads (in bytes, default: 5MB)
MAX_FILE_SIZE="5242880"
# Allowed file types for image uploads
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp" 